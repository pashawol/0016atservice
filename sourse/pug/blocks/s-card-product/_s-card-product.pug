									tr
										td ПРОФИЛЬ
										td 75
									tr
										td ДИАМЕТР
										td R17.5

									tr
										td НАЗНАЧЕНИЕ
										td РЕГИОНАЛЬНАЯ
									tr
										td ТИП ОСИ
										td РУЛЕВАЯ
					.txt_blk
