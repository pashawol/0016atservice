mixin s-card-product()
	// start s-card-product
	+b.SECTION.s-card-product.section#s-card-product&attributes(attributes)
		.container
			.border-bottom
				h1 Hankook AH35 215/75R17,5
			+e.brief-information
				+e.availability В наличии: есть в наличии
				+e.code Артикул: 14981027115
